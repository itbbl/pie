<?xml version="1.0" encoding="utf-8"?> 
<odoo>


    <!-- Start of PIE Setup Views -->
	<record model="ir.ui.view" id="view_pie_advance_search_form">
		<field name="name">view_pie_advance_search_form</field>
		<field name="model">pie.advanced.search</field>
		  
		<field name="arch" type="xml">
		      <form>
            <sheet>
                <div class="container-fluid">
   <div class="row">
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Region:</h3>
            <field name="region" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Property Type:</h3>
            <field name="property_type" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">District:</h3>
            <field name="district"  class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Status:</h3>
            <field name="property_status" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Area:</h3>
            <field name="area" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Finishing:</h3>
            <field name="finishing" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }"  class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Developer:</h3>
            <field name="developers" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Property Design:</h3>
            <field name="property_design" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Project:</h3>
            <field name="projects" widget="many2many_tags"  options="{'no_create_edit': True, 'no_create':True, 'no_open':True }"  class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Rooms:</h3>
            <field name="rooms" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Property Code:</h3>
            <field name="property_code" class="form-control selectstyle"/>
         </div>
      </div>
      <div class="col-xs-6">
         <div class="form-group">
            <h3 for="exampleFormControlSelect33">Bathrooms:</h3>
            <field name="bathrooms" widget="many2many_tags" options="{'no_create_edit': True, 'no_create':True, 'no_open':True }" class="form-control selectstyle"/>
         </div>
      </div>
   </div>
</div>
<div class="container-fluid p-0 grey_div_noshadow pt-2">
   <div class="container">
      <div class="row pl-5">
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
             
               <h3 class="font-bold font-16" for="i2">Basement</h3>
			   <field name="Basement"/>
            </div>
         </div>
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
               
               <h3 class="font-bold font-16" for="i7">Garden</h3>
			   <field name="Garden"/>
            </div>
         </div>
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
             
               <h3 class="font-bold font-16" for="i3">Roof</h3>
			   <field name="Roof"/>
            </div>
         </div>
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
                
               <h3 class="font-bold font-16" for="i4">Terrace</h3>
			   <field name="Terrace"/>
            </div>
         </div>
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
               
               <h3 class="font-bold font-16" for="i5">Garage</h3>
			   <field name="Garden"/>
            </div>
         </div>
         <div class="col-4 mb-1 pl-1 pr-1">
            <div class="md-checkbox w-100">
              
               <h3 class="font-bold font-16" for="i6">Land</h3>
			   <field name="Land"/>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="container-fluid pl-3 pr-3 mt-4">
   <div class="row mb-3">
      <div class="col-4">
         <h3 class="darkgrey-color font-bold mt-7 mb-0">BUA:</h3>
      </div>
      <div class="col-4"> 
	  <field name="bua_from" widget="char"  placeholder="From" class="form-control rounded-0 textbox w-100"/>
	  </div>
      <div class="col-4"> <field name="bua_to" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="To"/></div>
   </div>
   <div class="row mb-3">
      <div class="col-4">
         <h3 class="darkgrey-color font-bold mt-7 mb-0">Price:</h3>
      </div>
      <div class="col-4"> <field name="price_from" class="form-control rounded-0 textbox w-100" widget="char"  placeholder="From"/></div>
      <div class="col-4"> <field name="price_to" class="form-control rounded-0 textbox w-100"  widget="char"  placeholder="To"/></div>
   </div>
   <div class="row mb-3">
      <div class="col-4">
         <h3 class="darkgrey-color font-bold mt-7 mb-0">Price/m2:</h3>
      </div>
      <div class="col-4"> <field name="price_from_m" class="form-control rounded-0 textbox w-100" type="text" widget="char" placeholder="From"/></div>
      <div class="col-4"> <field name="price_to_m" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="To"/></div>
   </div>
   <div class="row mb-3">
      <div class="col-4">
         <h3 class="darkgrey-color font-bold mt-7 mb-0">Deposit:</h3>
      </div>
      <div class="col-4"> <field name="deposit_from" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="From"/></div>
      <div class="col-4"> <field name="deposited_to" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="To"/></div>
   </div>
   <div class="row mb-3">
      <div class="col-4">
         <h3 class="darkgrey-color font-bold mt-7 mb-0">Installment:</h3>
      </div>
      <div class="col-4"> <field name="installment_from" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="From"/></div>
      <div class="col-4"> <field name="installment_to" class="form-control rounded-0 textbox w-100" type="text" widget="char"  placeholder="To"/></div>
   </div>
</div>
<div class="container-fluid pl-3 pr-3 mt-4">
   <div class="row">
      <div class="col-xs-6">
         <h3 class="darkgrey-color font-bold mt-3 mb-0 d-block">Payment:</h3>
         <select class="form-control selectstyle" id="exampleFormControlSelect2">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
         </select>
      </div>
      <div class="col-xs-6">
         <h3 class="darkgrey-color font-bold mt-3 mb-0 d-block">Market:</h3>
         <field name="Market" class="form-control selectstyle" id="exampleFormControlSelect2"/>
         
      </div>
   </div>
 
</div>
	<button string="search" type="object" name="advance_search_property"/>
            </sheet>
			 
         </form>
			 
			 
		</field>
	</record>
    <record id="pie_advance_search_tree" model="ir.ui.view">
    <field name="name">view_pie_advance_search_form</field>
		<field name="model">pie.advanced.search</field>
		  
		<field name="arch" type="xml">
         <tree>
           
          </tree>
        </field>
    </record>


</odoo>
